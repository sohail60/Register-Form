<link href="/css/register.css" rel="stylesheet" type="text/css">

<div class="box">
    <div class="submit-heading">Register</div>
    <form action="/register" method="POST" class="form" id="form">
      <!-- Name -->
      <div class="form-element default-form-element">
        <label for="name">Name</label>
        <input type="text" autoComplete='off' name='name' class='field' id="name" required />
        </div>

      <!-- Email -->
        <div class="form-element default-form-element">
        <label for="email">Email</label>
        <input type="email" autoComplete='off' name="email" class='field' id="email" required />
        </div>

      <!-- Password -->
        <div class="form-element default-form-element">
        <label for="password">Password</label>
        <input type="password" autoComplete='off' name="password" class='field' id="password" required />
        </div>

      <!-- Confirm Password -->
        <div class="form-element default-form-element">
        <label for="confirm-password">Confirm Password</label>
        <input type="password" autoComplete='off' name="confirmpassword" class='field' id="confirmpassword" required />
        </div>

        <div class="btn-container">
            <button class='btn' id="btn" type='submit'>Submit</button>
        </div>
    </form>
</div>